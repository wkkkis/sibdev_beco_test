{% extends "templates/main.njk" %}

{% block links %}
    <link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-lite.min.css" rel="stylesheet">
    <link href="static/plugins/tam-emoji/css/emoji.css" rel="stylesheet">
    <script src="https://use.fontawesome.com/52e183519a.js"></script>
{% endblock %}

{% set title = "Documents" %}

{% from "macros/pages_options.njk" import pages_title, page_description %}
{% from "macros/tools.njk" import edit, block, unblock, export, remove, active, deactive %}
{% from "macros/button_custom.njk" import button %}
{% from "macros/input_custom.njk" import field %}
{% from "macros/users_options.njk" import options_sort, checkbox %}

{% block content %}
    <div class="main-wrap documents">
        <div class="pages-title">
            <div class="title-about-page">
                <span class="title-page text-21">
                   Documents
                </span>
            </div>
        </div>
        <div class="main-wrap-content">
            <div class="tool-wrap text-13">
                <div class="tool-bar">
                    <div class="tool-bar__title">
                        <span>Tools:</span>
                    </div>
                    <div class="tool-bar__links">
                        <button class="tool-btn document-add button">
                            <svg width="20"
                                 height="20"
                                 viewBox="0 0 20 20"
                                 fill="none"
                                 xmlns="http://www.w3.org/2000/svg">
                                <path d="M4.1665 15H7.69984C7.80951 15.0007 7.91823 14.9796 8.01976 14.9382C8.12129 14.8967 8.21364 14.8356 8.2915 14.7584L14.0582 8.98336L16.4248 6.6667C16.5029 6.58923 16.5649 6.49706 16.6072 6.39551C16.6496 6.29396 16.6713 6.18504 16.6713 6.07503C16.6713 5.96502 16.6496 5.8561 16.6072 5.75455C16.5649 5.653 16.5029 5.56083 16.4248 5.48336L12.8915 1.90836C12.814 1.83026 12.7219 1.76826 12.6203 1.72595C12.5188 1.68365 12.4098 1.66187 12.2998 1.66187C12.1898 1.66187 12.0809 1.68365 11.9794 1.72595C11.8778 1.76826 11.7856 1.83026 11.7082 1.90836L9.35817 4.2667L3.57484 10.0417C3.4976 10.1196 3.4365 10.2119 3.39503 10.3134C3.35356 10.415 3.33254 10.5237 3.33317 10.6334V14.1667C3.33317 14.3877 3.42097 14.5997 3.57725 14.756C3.73353 14.9122 3.94549 15 4.1665 15ZM12.2998 3.67503L14.6582 6.03336L13.4748 7.2167L11.1165 4.85836L12.2998 3.67503ZM4.99984 10.975L9.9415 6.03336L12.2998 8.3917L7.35817 13.3334H4.99984V10.975ZM17.4998 16.6667H2.49984C2.27882 16.6667 2.06686 16.7545 1.91058 16.9108C1.7543 17.0671 1.6665 17.279 1.6665 17.5C1.6665 17.721 1.7543 17.933 1.91058 18.0893C2.06686 18.2456 2.27882 18.3334 2.49984 18.3334H17.4998C17.7209 18.3334 17.9328 18.2456 18.0891 18.0893C18.2454 17.933 18.3332 17.721 18.3332 17.5C18.3332 17.279 18.2454 17.0671 18.0891 16.9108C17.9328 16.7545 17.7209 16.6667 17.4998 16.6667Z"
                                      fill="#888888" />
                            </svg>
                            <span>Add new document</span>
                        </button>
                        {{ edit('edit-document') }}
                        {{ remove('remove-document') }}
                    </div>
                    <div class="tool-bar__modal">

                        <div class="modal modal-create-document">
                            <div class="modal-overlay modal-toggle-create-document"></div>
                            <div class="modal-wrapper modal-transition">
                                <div class="modal-header">
                                    <div class="document-tools-title">
                                        <span class="modal-heading text-21">Create document</span>
                                    </div>

                                    <div class="modal-close modal-toggle-create-document">
                                        <svg width="24"
                                             height="24"
                                             viewBox="0 0 24 24"
                                             fill="none"
                                             xmlns="http://www.w3.org/2000/svg">
                                            <path d="M13.4099 11.9999L19.7099 5.70994C19.8982 5.52164 20.004 5.26624 20.004 4.99994C20.004 4.73364 19.8982 4.47825 19.7099 4.28994C19.5216 4.10164 19.2662 3.99585 18.9999 3.99585C18.7336 3.99585 18.4782 4.10164 18.2899 4.28994L11.9999 10.5899L5.70994 4.28994C5.52164 4.10164 5.26624 3.99585 4.99994 3.99585C4.73364 3.99585 4.47824 4.10164 4.28994 4.28994C4.10164 4.47825 3.99585 4.73364 3.99585 4.99994C3.99585 5.26624 4.10164 5.52164 4.28994 5.70994L10.5899 11.9999L4.28994 18.2899C4.19621 18.3829 4.12182 18.4935 4.07105 18.6154C4.02028 18.7372 3.99414 18.8679 3.99414 18.9999C3.99414 19.132 4.02028 19.2627 4.07105 19.3845C4.12182 19.5064 4.19621 19.617 4.28994 19.7099C4.3829 19.8037 4.4935 19.8781 4.61536 19.9288C4.73722 19.9796 4.86793 20.0057 4.99994 20.0057C5.13195 20.0057 5.26266 19.9796 5.38452 19.9288C5.50638 19.8781 5.61698 19.8037 5.70994 19.7099L11.9999 13.4099L18.2899 19.7099C18.3829 19.8037 18.4935 19.8781 18.6154 19.9288C18.7372 19.9796 18.8679 20.0057 18.9999 20.0057C19.132 20.0057 19.2627 19.9796 19.3845 19.9288C19.5064 19.8781 19.617 19.8037 19.7099 19.7099C19.8037 19.617 19.8781 19.5064 19.9288 19.3845C19.9796 19.2627 20.0057 19.132 20.0057 18.9999C20.0057 18.8679 19.9796 18.7372 19.9288 18.6154C19.8781 18.4935 19.8037 18.3829 19.7099 18.2899L13.4099 11.9999Z"
                                                  fill="black" />
                                        </svg>
                                    </div>
                                </div>

                                <div class="modal-body">
                                    <div class="modal-content">
                                        <div class="document-input">
                                            {{ field("Document name", "text", "Enter document name", "", "document-enter-name") }}
                                            {{ field("Link", "text", ".../documents/Enter name or use auto-generated", "", "document-enter-link") }}
                                        </div>
                                        <label class="label-for-drop">Document name</label>
                                        <div id="summernote"><div class="placeholder">Start typing...</div></div>
                                    </div>
                                </div>

                                <div class="modal-footer">
                                    <div class="modal-toggle-create-document">
                                        {{ button("Cancel", "light", "button", "cancel_document", "text-15") }}
                                    </div>
                                    {{ button("Publish", "dark", "button", "document_publish", "text-15") }}
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
            <div class="data-wrap">
                <div class="documents-sort thead">

                    <div id="all-checkbox" class="all-checkbox light disabled">
                        <div class="checkbox-custom">
                            <input type="checkbox" id="selectall">
                            <label for="selectall"></label>
                        </div>
                    </div>

                    <div class="sort-block">
                        <div id="name" class="options-users-without-disabled light">
                            <span>Document name</span>
                        </div>
                    </div>

                    <div class="sort-block">
                        <div id="created" class="options-users-without-disabled light created">
                            <span>Created</span>
                        </div>
                    </div>

                    <div class="sort-block">
                        <div id="document-link" class="options-users-without-disabled light document-link">
                            <span>Link</span>
                        </div>
                    </div>
                </div>

                <div class="data-lines">
                    {% for i in range(1, 5) %}
                        <div class="documents-line tbody th-line">
                            <div class="checkbox-custom th-checkbox">
                                <input type="checkbox"
                                       id="checkbox{{ i }}"
                                       class="selectedId">
                                <label for="checkbox{{ i }}"></label>
                            </div>
                            <div class="documents-padding th-line-padding bold">
                                <span>Privacy policy</span>
                            </div>
                            <div class="documents-padding th-line-padding">
                                <span>20 may 2020</span>
                            </div>
                            <div class="documents-padding th-line-padding">
                                <div class="documents-links">
                                    <span>../documents/</span>
                                    <span>private_police</span>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block scripts %}
    <script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-lite.min.js"></script>
    <script src="static/plugins/tam-emoji/js/config.js"></script>
    <script src="static/plugins/tam-emoji/js/tam-emoji.min.js?v=1.1"></script>
    <script>
      $(document).ready(function () {
        document.emojiSource = 'static/plugins/tam-emoji/img';
        $('#summernote').summernote({
          height: 500,
          fontSizes: ['13', '15', '17', '19', '21'],
          toolbar: [
            ['font', ['bold', 'italic', 'underline', 'fontsize']],
            ['list', ['ol', 'paragraph']],
            ['insert', ['link', 'picture', 'emoji']]
          ]
        });
      });
      </script>
{% endblock %}
