                            </div>
                        </div>
                        <div class="userid-option options-sort-block option-sort-disabled">
                            <div class="arrow-for-sort">
                            </div>
                            <div class="option-sort-input">
                                <div style="margin-right: 20px">
                                    {{ field("User ID", "text", "From", "112px", "from_id_input") }}
                                </div>
                                {{ field("", "text", "To", "112px", "to-id-input") }}
                            </div>
                            <div class="option-sort-button">
                                <div class="reset-btn">
                                    {{ button("Reset filter", "light", "button", "reset_userid", "text-15") }}
                                </div>
                                {{ button("Apply filter", "dark", "button", "apply_userid", "text-15") }}
                            </div>
                        </div>
                    </div>
                    <div class="sort-block">
                        {{ options_sort("Name / Surname", "250px", "name") }}
                        <div class="name-option options-sort-block option-sort-disabled">
                            <div class="arrow-for-sort">
                            </div>
                            {{ field("Name", "text", "Enter name", "275px", "from_name_input") }}
                            {{ field("Surname", "text", "Enter surname", "275px", "to_name_input") }}
                            <div class="option-sort-button">
                                <div class="reset-btn">
                                    {{ button("Reset filter", "light", "button", "reset_name", "text-15") }}
                                </div>
                                {{ button("Apply filter", "dark", "button", "apply-name", "text-15") }}
                            </div>
                        </div>
                    </div>
                    <div class="sort-block">
                        {{ options_sort("Nickname", "200px", "nick") }}
                        <div class="nick-option options-sort-block option-sort-disabled">
                            <div class="arrow-for-sort">
                            </div>
                            {{ field("Nickname", "text", "Enter nickname", "275px", "nick_input") }}
                            <div class="options-checkbox text-15">
                                <div class="complete-checkbox">
                                    {{ checkbox("nick_complete") }}
                                    <span class="nick_complete">Complete match</span>
                                </div>
                                <div class="partial-checkbox">
                                    {{ checkbox("nick_partial") }}
                                    <span class="nick_partial color-black">Partial match</span>
                                </div>
                            </div>
                            <div class="option-sort-button">
                                <div class="reset-btn">
                                    {{ button("Reset filter", "light", "button", "reset_nick", "text-15") }}
                                </div>
                                {{ button("Apply filter", "dark", "button", "apply_nick", "text-15") }}
                            </div>
                        </div>
                    </div>
                    <div class="sort-block">
                        {{ options_sort("E Mail", "200px", "email") }}
                        <div class="email-option options-sort-block option-sort-disabled">
                            <div class="arrow-for-sort">
                            </div>
                            {{ field("E-mail", "text", "Enter E-main", "275px", "email_input") }}
                            <div class="options-checkbox">
                                <div class="complete-checkbox">
                                    {{ checkbox("email_complete") }}
                                    <span class="email_complete">Complete match</span>
                                </div>
                                <div class="partial-checkbox">
                                    {{ checkbox("email_partial") }}
                                    <span class="email_partial">Partial match</span>
                                </div>
                            </div>
                            <div class="option-sort-button">
                                <div class="reset-btn">
                                    {{ button("Reset filter", "light", "button", "reset_email", "text-15") }}
                                </div>
                                {{ button("Apply filter", "dark", "button", "apply_email", "text-15") }}
                            </div>
                        </div>
                    </div>
                    <div class="sort-block">
                        {{ options_sort("City", "150px", "city") }}
                        <div class="city-option options-sort-block option-sort-disabled">
                            <div class="arrow-for-sort">
                            </div>
                            <label class="label-for-drop">City</label>
                            <select id="marketplace_city" class="select">
                                <option disabled>Select city / cities</option>
                                <option value="1">Select status 1</option>
                                <option value="2">Select status 2</option>
                                <option value="3">Select status 3</option>
                                <option value="4">Select status 4</option>
                                <option value="5">Select status 5</option>
                                <option value="5">Select status 6</option>
                                <option value="5">Select status 7</option>
                            </select>
                            <div class="option-sort-button">
                                <div class="reset-btn">
                                    {{ button("Reset filter", "light", "button", "reset_city", "text-15") }}
                                </div>
                                {{ button("Apply filter", "dark", "button", "apply_city", "text-15") }}
                            </div>
                        </div>
                    </div>
                    <div class="sort-block">
                        {{ options_sort("Phone", "150px", "phone") }}
                        <div class="phone-option options-sort-block option-sort-disabled">
                            <div class="arrow-for-sort">
                            </div>
                            {{ field("Phone", "text", "Enter phone", "275px", "phone_input") }}
                            <div class="options-checkbox">
                                <div class="complete-checkbox">
                                    {{ checkbox("phone_complete") }}
                                    <span class="phone_complete">Complete match</span>
                                </div>
                                <div class="partial-checkbox">
                                    {{ checkbox("phone_partial") }}
                                    <span class="phone_partial">Partial match</span>
                                </div>
                            </div>
                            <div class="option-sort-button">
                                <div class="reset-btn">
                                    {{ button("Reset filter", "light", "button", "reset_phone", "text-15") }}
                                </div>
                                {{ button("Apply filter", "dark", "button", "apply_phone", "text-15") }}
                            </div>
                        </div>
                    </div>
                    <div class="sort-block">
                        {{ options_sort("Social media", "150px", "social") }}
                    </div>
                    <div class="sort-block">
                        {{ options_sort("Rating", "130px", "rating") }}
                        <div class="rating-option options-sort-block option-sort-disabled">
                            <div class="arrow-for-sort">
                            </div>
                            <div class="option-sort-input">
                                <div style="margin-right: 20px">
                                    {{ field("Ratging", "text", "From 0.00", "112px", "from_rating_input") }}
                                </div>
                                {{ field("", "text", "To 5.00", "112px", "to_rating_input") }}
                            </div>
                            <div class="option-sort-button">
                                <div class="reset-btn">
                                    {{ button("Reset filter", "light", "button", "reset_rating", "text-15") }}
                                </div>
                                {{ button("Apply filter", "dark", "button", "apply_rating", "text-15") }}
                            </div>
                        </div>
                    </div>
                    <div class="sort-block">
                        {{ options_sort("Registraton", "150px", "register") }}
                        <div class="register-option options-sort-block option-sort-disabled">
                            <div class="arrow-for-sort">
                            </div>
                            <div class="option-sort-input">
                                <div style="margin-right: 20px">
                                    <input placeholder="From"
                                           type="text"
                                           onfocus="(this.type = 'date')"
                                           id="date_from_input">
                                </div>
                                <input placeholder="To"
                                       type="text"
                                       onfocus="(this.type = 'date')"
                                       id="date_to_input">
                            </div>
                            <div class="option-sort-button">
                                <div class="reset-btn">
                                    {{ button("Reset filter", "light", "button", "reset_date", "text-15") }}
                                </div>
                                {{ button("Apply filter", "dark", "button", "apply_date", "text-15") }}
                            </div>
                        </div>
                    </div>
                </div>

                <div class="users-data">
                    {% for i in range(1, 15) %}
                        <div class="user" >
                            <div class="checkbox user-checkbox">
                                <input type="checkbox"
                                       id="checkbox{{ i }}"
                                       class="selectedId">
                                <label for="checkbox{{ i }}"></label>
                            </div>
                            <div class="user-padding bold">
                                <span>00000{{ i }}</span>
                            </div>
                            <div class="user-padding bold">
                                <span>Johnathan Silverstone</span>
                            </div>
                            <div class="user-padding nickname">
                                <span>johnathanseller</span>
                            </div>
                            <div class="user-padding">
                                <span>samplelongmail@shoof.com</span>
                            </div>
                            <div class="user-padding">
                                <span> Abu-Dhabi</span>
                            </div>
                            <div class="user-padding">
                                <span>+1 500 1000 000</span>
                            </div>
                            <div class="user-padding">
                                <svg width="18"
                                     height="18"
                                     class="active-social"
                                     viewBox="0 0 18 18"
                                     fill="none"
                                     xmlns="http://www.w3.org/2000/svg">
