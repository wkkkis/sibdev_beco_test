{% extends "templates/main.njk" %}

{% set title = "marketplace" %}

{% from "macros/pages_options.njk" import pages_title, page_description %}
{% from "macros/tools.njk" import edit, block, unblock, export, remove %}
{% from "macros/users_options.njk" import options_sort %}
{% from "macros/users_options.njk" import checkbox %}
{% from "macros/input_custom.njk" import field %}
{% from "macros/button_custom.njk" import button %}

{% block content %}
    <div class="marketplace-wrap">
        {{ pages_title("Marketplace", "Showing 1 to 14 of 100 000 users") }}
        <div class="marketplace-content">
            <div class="tool-wrap text-13">
                <div class="tool-bar">
                    <div class="tool-bar__title">
                        <span>Tools :</span>
                    </div>
                    <div class="tool-bar__links">
                        {{ edit("88px") }}
                        {{ block("122px") }}
                        {{ unblock("153px") }}
                        {{ export("143px") }}
                        {{ remove("97px") }}
                    </div>
                    <div class="tool-bar__modal">
                        {% include "blocks/export_excel.njk" %}
                        <div class="modal modal-block">
                            <div class="modal-overlay modal-toggle-block"></div>
                            <div class="modal-wrapper modal-transition">
                                <div class="modal-header">
                                    <span class="modal-heading text-21">Block user</span>

                                    <div class="modal-close modal-toggle-block">
                                        <svg width="24"
                                             height="24"
                                             viewBox="0 0 24 24"
                                             fill="none"
                                             xmlns="http://www.w3.org/2000/svg">
