                                          fill="white" />
                                    <path d="M11.7059 12.8012C9.60292 14.1511 6.80382 13.5405 5.45397 11.4375C5.25109 11.1214 5.08836 10.7813 4.96952 10.425L2.46387 12.3682C3.73675 14.9022 6.33043 16.5012 9.16615 16.5C10.9919 16.5496 12.7675 15.8996 14.1298 14.683L11.7059 12.8012Z"
                                          fill="white" />
                                    <path d="M16.2301 7.63635H9.1665V10.5375H13.2028C13.0341 11.4648 12.4934 12.2826 11.7063 12.8011C11.7039 12.8027 11.7014 12.8038 11.699 12.8053C11.7014 12.8038 11.7039 12.8027 11.7063 12.8012L14.1301 14.683L14.1301 14.6829C15.6228 13.2452 16.4356 11.2418 16.3665 9.17046C16.3669 8.65602 16.3213 8.14264 16.2301 7.63635Z"
                                          fill="white" />
                                </svg>
                            </div>
                            <div class="user-padding">
                                <span>4.98</span>
                            </div>
                            <div class="user-padding">
                                <span>20 may 2020</span>
                            </div>
                        </div>
                    {% endfor %}
                </div>

            </div>
        </div>
        {% include "blocks/pagination.njk" %}
    </div>
{% endblock %}

