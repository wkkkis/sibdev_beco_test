{% extends "templates/main.njk" %}

{% set title = "Announcement" %}

{% from "macros/pages_options.njk" import pages_title, page_description %}
{% from "macros/tools.njk" import edit, block, unblock, export, remove, active, deactive %}
{% from "macros/button_custom.njk" import button %}
{% from "macros/input_custom.njk" import field %}
{% from "macros/users_options.njk" import options_sort, checkbox %}

{% block content %}
    <div class="announcement-wrap">
        <div class="pages-title">
            <div class="title-about-page">
            <span class="title-page text-21">
               Announcements
            </span>
                <div class="border"></div>
                <span class="about-page text-15">
               Showing 1 to 14 of 100 000 announcements
            </span>
            </div>
        </div>
        <div class="announcement-content">
            <div class="tool-wrap text-13">
                <div class="tool-bar">
                    <div class="tool-bar__title">
                        <span>tools:</span>
                    </div>
                    <div class="tool-bar__links">
                        {{ active() }}
                        {{ deactive() }}
                        {{ export() }}
                        {{ remove() }}
                    </div>
                    <div class="tool-bar__modal">
                        {% include "blocks/export_excel.njk" %}

                        <div class="modal modal-block">
                            <div class="modal-overlay modal-toggle-block"></div>
                            <div class="modal-wrapper modal-transition">
                                <div class="modal-header">
                                    <span class="modal-heading text-21">Block user</span>

                                    <div class="modal-close modal-toggle-block">
                                        <svg width="24"
                                             height="24"
                                             viewBox="0 0 24 24"
                                             fill="none"
                                             xmlns="http://www.w3.org/2000/svg">
                                            <path d="M13.4099 11.9999L19.7099 5.70994C19.8982 5.52164 20.004 5.26624 20.004 4.99994C20.004 4.73364 19.8982 4.47825 19.7099 4.28994C19.5216 4.10164 19.2662 3.99585 18.9999 3.99585C18.7336 3.99585 18.4782 4.10164 18.2899 4.28994L11.9999 10.5899L5.70994 4.28994C5.52164 4.10164 5.26624 3.99585 4.99994 3.99585C4.73364 3.99585 4.47824 4.10164 4.28994 4.28994C4.10164 4.47825 3.99585 4.73364 3.99585 4.99994C3.99585 5.26624 4.10164 5.52164 4.28994 5.70994L10.5899 11.9999L4.28994 18.2899C4.19621 18.3829 4.12182 18.4935 4.07105 18.6154C4.02028 18.7372 3.99414 18.8679 3.99414 18.9999C3.99414 19.132 4.02028 19.2627 4.07105 19.3845C4.12182 19.5064 4.19621 19.617 4.28994 19.7099C4.3829 19.8037 4.4935 19.8781 4.61536 19.9288C4.73722 19.9796 4.86793 20.0057 4.99994 20.0057C5.13195 20.0057 5.26266 19.9796 5.38452 19.9288C5.50638 19.8781 5.61698 19.8037 5.70994 19.7099L11.9999 13.4099L18.2899 19.7099C18.3829 19.8037 18.4935 19.8781 18.6154 19.9288C18.7372 19.9796 18.8679 20.0057 18.9999 20.0057C19.132 20.0057 19.2627 19.9796 19.3845 19.9288C19.5064 19.8781 19.617 19.8037 19.7099 19.7099C19.8037 19.617 19.8781 19.5064 19.9288 19.3845C19.9796 19.2627 20.0057 19.132 20.0057 18.9999C20.0057 18.8679 19.9796 18.7372 19.9288 18.6154C19.8781 18.4935 19.8037 18.3829 19.7099 18.2899L13.4099 11.9999Z"
                                                  fill="black" />
                                        </svg>
                                    </div>
                                </div>

                                <div class="modal-body">
                                    <div class="modal-content">
                                        <div class="modal-description">
                                            Are you sure you want to block the selected ads?<br>
                                            These ads will be hidden from public access
                                        </div>
                                    </div>
                                    <div class="modal-footer">
                                        <div class="modal-error">
                                            Error text will be here
                                        </div>
                                        <div class="modal-buttons">
                                            <div class="modal-toggle-block">
                                                {{ button("Cancel", "light", "button", "close_block_modal", "text-15") }}
                                            </div>
                                            {{ button("Block announcements", "dark", "button", "block_user", "text-15") }}
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
                <div class="description-bar">
                    {{ page_description("On moderation::", "1 000") }}
                    {{ page_description("Active:", "99 000") }}
                    {{ page_description("Deactivated:", "57 000") }}
                </div>
            </div>
            <div class="announcement-table-wrap">
                <div class="announcement-sort thead">
                    <div id="all-checkbox" class="all-checkbox light disabled">
                        <div class="checkbox-custom">
                            <input type="checkbox" id="selectall">
                            <label for="selectall"></label>
                        </div>
                    </div>
                    <div class="sort-block">
                        {{ options_sort("Ad ID", "id") }}
                        <div class="id-option options-sort-block option-sort-disabled">
                            <div class="arrow-for-sort">
                            </div>
                            <div class="option-sort-input">
                                {{ field("User ID", "text", "From", "from_id_input") }}
                                {{ field("", "text", "To", "to_id_input") }}
                            </div>
                            <div class="option-sort-button">
                                <div class="reset-btn">
                                    {{ button("Reset filter", "light", "button", "reset_userid", "text-15") }}
                                </div>
                                {{ button("Apply filter", "dark", "button", "apply_userid", "text-15") }}
                            </div>
                        </div>
                    </div>
                    <div class="sort-block">
                        {{ options_sort("Ad title", "title") }}
                        <div class="title-option options-sort-block option-sort-disabled">
                            <div class="arrow-for-sort">
                            </div>
                            {{ field("Ad title", "text", "Input title", "275px", "title_input") }}
                            <div class="option-sort-button">
                                <div class="reset-btn">
                                    {{ button("Reset filter", "light", "button", "reset_title", "text-15") }}
                                </div>
                                {{ button("Apply filter", "dark", "button", "apply_title", "text-15") }}
                            </div>
                        </div>
                    </div>
                    <div class="sort-block">
                        {{ options_sort("Subm. (Mod)", "subm") }}
                        <div class="subm-option options-sort-block option-sort-disabled">
                            <div class="arrow-for-sort">
                            </div>
                            <div class="option-sort-input">
                                <input placeholder="From"
                                       type="text"
                                       onfocus="(this.type = 'date')"
                                       id="date_from_input">
                                <input placeholder="To"
                                       type="text"
                                       onfocus="(this.type = 'date')"
                                       id="date_to_input">
                            </div>
                            <div class="option-sort-button">
                                <div class="reset-btn">
                                    {{ button("Reset filter", "light", "button", "reset_subm", "text-15") }}
                                </div>
                                {{ button("Apply filter", "dark", "button", "apply_subm", "text-15") }}
                            </div>
                        </div>
                    </div>
                    <div class="sort-block">
                        {{ options_sort("Author", "author") }}
                        <div class="author-option options-sort-block option-sort-disabled">
                            <div class="arrow-for-sort">
                            </div>
                            {{ field("Authorâ€™s nickname", "text", "Enter nickname", "275px", "author_input") }}
                            <div class="option-sort-button">
                                <div class="reset-btn">
                                    {{ button("Reset filter", "light", "button", "reset_author", "text-15") }}
                                </div>
                                {{ button("Apply filter", "dark", "button", "apply_author", "text-15") }}
                            </div>
                        </div>
                    </div>
                    <div class="sort-block">
                        {{ options_sort("Price", "price") }}
                        <div class="price-option options-sort-block option-sort-disabled">
                            <div class="arrow-for-sort">
                            </div>
                            <div class="option-sort-input">
                                {{ field("Price", "text", "From", "112px", "from_price_input") }}
                                {{ field("", "text", "To", "112px", "to-price-input") }}
                            </div>
                            <div class="options-checkbox text-15">
                                <div class="complete-checkbox">
                                    <input type="radio" id="test5" name="radio-group" checked>
                                    <label for="test5">Contact price</label>
                                </div>
                            </div>
                            <div class="option-sort-button">
                                <div class="reset-btn">
                                    {{ button("Reset filter", "light", "button", "reset_price", "text-15") }}
                                </div>
                                {{ button("Apply filter", "dark", "button", "apply_price", "text-15") }}
                            </div>
                        </div>
                    </div>
                    <div class="sort-block">
                        {{ options_sort("City", "city") }}
                        <div class="city-option options-sort-block option-sort-disabled">
                            <div class="arrow-for-sort">
                            </div>
                            <label class="label-for-drop">City</label>
                            <select id="marketplace_city" class="select">
                                <option disabled>Select city / cities</option>
                                <option value="1">Select status 1</option>
                                <option value="2">Select status 2</option>
                                <option value="3">Select status 3</option>
                                <option value="4">Select status 4</option>
                                <option value="5">Select status 5</option>
                                <option value="5">Select status 6</option>
                                <option value="5">Select status 7</option>
                            </select>
                            <div class="option-sort-button">
                                <div class="reset-btn">
                                    {{ button("Reset filter", "light", "button", "reset_city", "text-15") }}
                                </div>
                                {{ button("Apply filter", "dark", "button", "apply_city", "text-15") }}
                            </div>
                        </div>
                    </div>
                    <div class="sort-block">
                        {{ options_sort("Category > Subcategory", "category") }}
                        <div class="category-option options-sort-block option-sort-disabled">
                            <div class="arrow-for-sort">
                            </div>
                            <div class="category-select">
                                <label class="label-for-drop">Category</label>
                                <select id="category_select" class="select">
                                    <option disabled>Select category</option>
                                    <option value="1">Select status 1</option>
                                    <option value="2">Select status 2</option>
                                    <option value="3">Select status 3</option>
                                    <option value="4">Select status 4</option>
                                    <option value="5">Select status 5</option>
                                    <option value="5">Select status 6</option>
                                    <option value="5">Select status 7</option>
                                </select>
                            </div>
                            <div>
                                <label class="label-for-drop">Subcategory</label>
                                <select id="subcategory_select" class="select">
                                    <option disabled>Select subcategory (-ies)</option>
                                    <option value="1">Select status 1</option>
                                    <option value="2">Select status 2</option>
                                    <option value="3">Select status 3</option>
                                    <option value="4">Select status 4</option>
                                    <option value="5">Select status 5</option>
                                    <option value="5">Select status 6</option>
                                    <option value="5">Select status 7</option>
                                </select>
                            </div>
                            <div class="option-sort-button">
                                <div class="reset-btn">
                                    {{ button("Reset filter", "light", "button", "category_email", "text-15") }}
                                </div>
                                {{ button("Apply filter", "dark", "button", "apply_category", "text-15") }}
                            </div>
                        </div>
                    </div>
                    <div class="sort-block">
                        {{ options_sort("Status", "status") }}
                        <div class="status-option options-sort-block option-sort-disabled">
                            <div class="arrow-for-sort">
                            </div>
                            <div>
                                <label class="label-for-drop">Status</label>
                                <select id="user_status-select" class="select">
                                    <option disabled>Select status</option>
                                    <option value="1">Select status 1</option>
                                    <option value="2">Select status 2</option>
                                    <option value="3">Select status 3</option>
                                    <option value="4">Select status 4</option>
                                    <option value="5">Select status 5</option>
                                    <option value="5">Select status 6</option>
                                    <option value="5">Select status 7</option>
                                </select>
                            </div>
                            <div class="option-sort-button">
                                <div class="reset-btn">
                                    {{ button("Reset filter", "light", "button", "reset_status", "text-15") }}
                                </div>
                                {{ button("Apply filter", "dark", "button", "apply_status", "text-15") }}
                            </div>
                        </div>
                    </div>
                    <div class="sort-block">
                        {{ options_sort("Type", "type") }}
                        <div class="type-option options-sort-block option-sort-disabled">
                            <div class="arrow-for-sort">
                            </div>
                            <div>
                                <label class="label-for-drop">Type</label>
                                <select id="user_status-select" class="select">
                                    <option disabled>Select status</option>
                                    <option value="1">Paid</option>
                                    <option value="2">Free</option>
                                </select>
                            </div>
                            <div class="option-sort-button">
                                <div class="reset-btn">
                                    {{ button("Reset filter", "light", "button", "reset_type", "text-15") }}
                                </div>
                                {{ button("Apply filter", "dark", "button", "apply_type", "text-15") }}
                            </div>
                        </div>
                    </div>
                </div>
                <div class="announcement-data tbody">
                    {% for i in range(1, 15) %}
                        <div class="announcement th-line">
                            <div class="checkbox-custom th-checkbox">
                                <input type="checkbox"
                                       id="checkbox{{ i }}"
                                       class="selectedId">
                                <label for="checkbox{{ i }}"></label>
                            </div>
                            <div class="th-line-padding bold">
                                <span>00000{{ i }}</span>
                            </div>
                            <div class="th-line-padding">
                                <span>Set of two Modern Chairs with tableded</span>
                            </div>
                            <div class="th-line-padding">
                                <span>20 may 2020</span>
                            </div>
                            <div class="th-line-padding">
                                <span>johnathanseller</span>
                            </div>
                            <div class="th-line-padding">
                                <span>Contact</span>
                            </div>
                            <div class="th-line-padding">
                                <span>Abu-Dhabi</span>
                            </div>
                            <div class="th-line-padding">
                                <span>Furniture > Chair</span>
                            </div>
                            <div class="th-line-padding">
                                <span>Active</span>
                            </div>
                            <div class="th-line-padding paid">
                                <span>Paid</span>
                            </div>
                        </div>
                    {% endfor %}
                </div>
                <div class="announcement-rounded-table">
                    <table class="table-bordered">

                    </table>
                </div>
            </div>
            <div class="modals">
                {% include "blocks/announcement_modal.njk" %}
            </div>
        </div>
        {% include "blocks/pagination.njk" %}
    </div>
{% endblock %}
